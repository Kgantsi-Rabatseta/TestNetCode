<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Data"
                   namespace="G4S.Deposita.COPS.Data.Domain">
  <class name="User" table="WORKS_User">
    <id name="Key">
      <generator class="guid.comb" />
    </id>
    <version name="Version" />
    <property name="UserName" unique="true" />
    <property name="Password" />
    <property name="DateInserted" not-null="false" />
    <property name="DateModified" not-null="false" />
    <property name="IsActive"/>
    <property name="LastModifiedBy" type="Guid"/>
    <property name="OldPassword"/>
    <property name="LastDatePasswordChanged" not-null="false"/>
    <set name="UserAccess" outer-join="false" cascade="save-update">
      <key column="UserKey" />
      <one-to-many class="UserAccess" />
    </set>
  </class>
</hibernate-mapping>